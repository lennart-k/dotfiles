# vi: ft=i3config
# Use pactl to adjust volume in PulseAudio. (Install pulseaudio)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5% && pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5% && pactl set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Install playerctl
bindsym XF86AudioPause exec playerctl --player=spotify play-pause || playerctl play-pause
bindsym XF86AudioPlay exec playerctl --player=spotify play || playerctl play
bindsym XF86AudioNext exec playerctl --player=spotify next || playerctl next
bindsym XF86AudioPrev exec playerctl --player=spotify previous || playerctl previous


